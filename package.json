{
  "name": "droid-cli",
  "version": "1.4.0",
  "description": "Interactive CLI for Android development, inspired by Expo CLI",
  "main": "dist/index.js",
  "bin": {
    "droid-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "android",
    "cli",
    "development",
    "gradle",
    "adb"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.3",
    "joi": "^17.13.3",
    "ora": "^8.2.0",
    "terminal-kit": "^3.1.2"
  }
}
